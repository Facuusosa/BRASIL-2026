# ============================================================
# Flight Monitor Bot - Variables de Entorno
# ============================================================
# Copiar este archivo a .env y completar con tus datos:
#   cp .env.example .env
# ============================================================

# === TELEGRAM BOT ===
# Crear bot en @BotFather y copiar el token aquí
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
# Obtener chat ID enviando un mensaje al bot y consultando:
# https://api.telegram.org/bot<TOKEN>/getUpdates
TELEGRAM_CHAT_ID=987654321

# === CONFIGURACIÓN DE BÚSQUEDA ===
DEPARTURE_DATE=2026-03-09
RETURN_DATE=2026-03-16
PASSENGERS=2
LUGGAGE_KG=20
DATE_FLEXIBILITY_DAYS=2

# === UMBRALES DE ALERTA ===
# Alerta CRÍTICA (con sonido en Telegram)
CRITICAL_PRICE_ARS=850000
CRITICAL_PRICE_USD=450
# Alerta IMPORTANTE (silenciosa)
IMPORTANT_PRICE_ARS=950000
IMPORTANT_PRICE_USD=550
# Caída de precio que dispara alerta (%)
PRICE_DROP_THRESHOLD_PERCENT=15
# Ahorro mínimo para sugerir cambio de fecha (ARS)
MIN_SAVINGS_FOR_SUGGESTION_ARS=100000
# Disponibilidad crítica (últimos X asientos)
CRITICAL_AVAILABILITY_THRESHOLD=3

# === CONFIGURACIÓN DE SCRAPING ===
HEADLESS_MODE=true
STEALTH_MODE=true
RANDOM_DELAY_MIN=5
RANDOM_DELAY_MAX=15
PAGE_LOAD_TIMEOUT=30000
MAX_RETRIES=2

# === BASE DE DATOS ===
# DATABASE_PATH=data/flights.db
# DB_CLEANUP_DAYS=30

# === LOGGING ===
LOG_LEVEL=INFO
# LOG_FILE=data/logs/bot.log
# LOG_MAX_BYTES=10485760
# LOG_BACKUP_COUNT=5

# === DAEMON (monitoreo continuo) ===
# Intervalo en segundos (21600 = 6 horas)
MONITOR_INTERVAL_SECONDS=21600

# === VPN (Opcional - Fase 2) ===
VPN_ENABLED=false
VPN_COUNTRY=BR
